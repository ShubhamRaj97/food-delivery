generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id               Int      @id @default(autoincrement())
  name             String
  email            String   @unique
  password         String
  contact          String?  // Optional phone number
  city             String
  createdAt        DateTime @default(now())
  address          String

  foods     Food[]

  @@map("restaurants") // optional: maps to "restaurants" table
}

model Food {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  path        String   // for image path or file path
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

   // relation field
  resto_id    Int
  restaurant  Restaurant @relation(fields: [resto_id], references: [id])
}


